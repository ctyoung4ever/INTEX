<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MummyWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark py-lg-4">
            <div class="container">
                <a class="navbar-brand text-uppercase fw-bold d-lg-none" asp-area="" asp-controller="Home" asp-action="Index">MummyWeb</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase text-dark" asp-area="" asp-controller="Home" asp-action="Unsupervised">Culture Over Time</a>

                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase text-dark" asp-area="" asp-controller="Home" asp-action="SubmitData">Prediction</a>
                        </li>
                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase text-dark" asp-area="" asp-controller="Home" asp-action="BurialList">Burials</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-uppercase text-dark" asp-area="" asp-controller="Home" asp-action="CreateBurialItem">Create Burial Records</a>
                            </li>
                        }
                        else
                        {

                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-uppercase text-dark" asp-area="" asp-controller="AspNetUsers" asp-action="Index">Users</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-uppercase text-dark" asp-area="" asp-controller="AspNetRoles" asp-action="Index">User Roles</a>
                            </li>
                        }
                        

                        </ul>
                </div>
            </div>
        </nav>
        <partial name="_CookieConsentPartial" />
    </header>
    <div class="container"> 
        

        <main role="main" class="pb-3" >
            <body style="background-image: url('https://res.cloudinary.com/odysseytraveller/image/fetch/f_auto,q_auto,dpr_auto,r_4,w_765,h_535.5,c_limit/https://cdn.odysseytraveller.com/app/uploads/2016/08/iStock_000089077551_Large.jpg');">

             @RenderBody()
            </body>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MummyWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
