@model INTEX.Models.BurialmainTextile

@{ ViewData["Title"] = "asktextile"; }

<h1>asktextile</h1>

<h4>BurialmainTextile</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="asktextile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MainBurialmainid" class="control-label"></label>
                <input asp-for="MainBurialmainid" class="form-control" value="@ViewBag.maxbId" readonly />
                <span asp-validation-for="MainBurialmainid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainTextileid" class="control-label"></label>
                <input asp-for="MainTextileid" class="form-control" value="@ViewBag.maxtextileid" readonly />
                <span asp-validation-for="MainTextileid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Do you want to add a Textile to this find?" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}