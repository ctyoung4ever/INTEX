@model INTEX.Models.ViewModels.AskViewModel

@{
    ViewData["Title"] = "Ask";
}

<h1>Ask</h1>

<h4>Textile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="asktextile" asp-controller="Home">
            <input type="hidden" name="formType" value="textile" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BurialmainTextile.MainBurialmainid" class="control-label"></label>
                <input asp-for="BurialmainTextile.MainBurialmainid" class="form-control" value="@Model.MaxBurialmainId" readonly />
                <span asp-validation-for="BurialmainTextile.MainBurialmainid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BurialmainTextile.MainTextileid" class="control-label"></label>
                <input asp-for="BurialmainTextile.MainTextileid" class="form-control" value="@(Model.MaxTextileId + 1)" readonly />
                <span asp-validation-for="BurialmainTextile.MainTextileid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" name="submitTextile" value="Add a Textile to this find?" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h4>Photo</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="askphoto" asp-controller="Home">
            <input type="hidden" name="formType" value="photo" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhotodataTextile.MainPhotodataid" class="control-label"></label>
                <input asp-for="PhotodataTextile.MainPhotodataid" class="form-control" value="@(Model.MaxPhotodataId + 1)" readonly />
                <span asp-validation-for="PhotodataTextile.MainPhotodataid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotodataTextile.MainTextileid" class="control-label"></label>
                <<input asp-for="PhotodataTextile.MainTextileid" class="form-control" value="@Model.MaxTextileId" readonly />
                <span asp-validation-for="PhotodataTextile.MainTextileid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" name="submitPhoto" value="Add a photo for this textile?" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
