@model INTEX.Models.PhotodataTextile

@{ ViewData["Title"] = "askphoto"; }
<div class="container">
    <div class="about-heading-content">
        <div class="row">
            <div class="col-xl-9 col-lg-10 mx-auto">
                <div class="bg-faded rounded p-5">

<h1>Link a Photo?</h1>

<h4>Photo Data Textile Table</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="askphoto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MainPhotodataid" class="control-label"></label>
                <input asp-for="MainPhotodataid" class="form-control" value="@ViewBag.phototextid" readonly />
                <span asp-validation-for="MainPhotodataid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainTextileid" class="control-label"></label>
                <input asp-for="MainTextileid" class="form-control" value="@ViewBag.maxtextileid" readonly />
                <span asp-validation-for="MainTextileid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="You are required to add a photo of this textile." class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
                        <a asp-action="BurialList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }
                </div>
            </div>
        </div>
    </div>
</div>